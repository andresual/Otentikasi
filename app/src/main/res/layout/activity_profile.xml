<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andresual.dev.otentikasi.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_transparent">

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:text="@string/welcome" />

    <TextView
        android:id="@+id/tvEmailProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_welcome"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/tv_welcome"
        android:text="Email" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tv_welcome"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayout_menu"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <TextView
            android:background="@color/colorPrimary"
            android:id="@+id/tv_main_menu"
            android:textColor="#ffffffff"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Menu"
            android:fontFamily="sans-serif"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/ib_air"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:drawableTop="@drawable/air"
            android:paddingBottom="20dp"
            android:drawablePadding="2dp"
            android:onClick="btnAir"
            android:text="Air"/>

        <Button
            android:id="@+id/ib_udara"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:drawableTop="@drawable/udara"
            android:paddingBottom="20dp"
            android:drawablePadding="2dp"
            android:text="Udara"/>

        <Button
            android:id="@+id/ib_sedimen"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:drawableTop="@drawable/sedimen"
            android:paddingBottom="20dp"
            android:drawablePadding="2dp"
            android:text="Sedimen"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tv_welcome"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_main_menu_paket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="   Paket"
        android:fontFamily="sans-serif"
        android:layout_marginTop="5dp"
        android:textColor="#ffffffff"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearLayout_paket"
        android:layout_below="@+id/tv_main_menu_paket"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <Button
            android:id="@+id/ib_paket_ambient"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.47"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/paket_air_udara"
            android:text="Air + Udara Ambient" />

        <Button
            android:id="@+id/ib_emisi"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/paket_air_udara_emisi"
            android:text="Air + Udara \nEmisi" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_main_menu_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="   Highlighted Features"
        android:textColor="#ffffffff"
        android:textSize="19sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_below="@+id/linearLayout_paket"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearLayout_more"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_main_menu_more">

        <Button
            android:id="@+id/ib_kalender"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:drawableTop="@drawable/kalender"
            android:paddingBottom="20dp"
            android:drawablePadding="2dp"
            android:text="Booking"
            android:onClick="btnBooking"/>

        <Button
            android:id="@+id/ib_cetak_lhu"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:drawableTop="@drawable/print"
            android:paddingBottom="20dp"
            android:drawablePadding="2dp"
            android:text="Cetak LHU"/>

        <Button
            android:id="@+id/ib_rating"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:drawableTop="@drawable/rating"
            android:paddingBottom="20dp"
            android:drawablePadding="2dp"
            android:text="saran"/>

    </LinearLayout>

</RelativeLayout>
