<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andresual.dev.otentikasi.RegisterActivity">

    <TextView
        android:id="@+id/tv_email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/et_email_address"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:text="Email" />

    <EditText
        android:id="@+id/et_email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/tv_email_address"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_password_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/tv_password"
        android:layout_alignStart="@+id/tv_password"
        android:layout_alignEnd="@+id/et_email_address" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@+id/et_email_address"
        android:layout_below="@+id/et_email_address"
        android:text="Password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ToS"
        android:layout_below="@+id/et_password_email"
        android:layout_alignEnd="@+id/et_password_email"
        android:layout_alignStart="@+id/et_password_email"
        android:id="@+id/textView"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:onClick="btnRegister"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:text="Save" />

</RelativeLayout>
